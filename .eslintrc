{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": true,
    "modules": true
  },
  "rules": {
    "curly": 2,
    "guard-for-in": 2,
    "no-extend-native": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": [2, { "vars": "all", "args": "all" }],
    "no-undef": [2, { "typeof": true }],
    "semi": [2, "always"],
    "react/jsx-uses-react": 1
  },
  "plugins": [
    "eslint-plugin-react"
  ]
}
